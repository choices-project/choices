{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./web/*"],
      "@/features/*": ["./web/features/*"],
      "@/components/*": ["./web/components/*"],
      "@/lib/*": ["./web/lib/*"],
      "@/hooks/*": ["./web/hooks/*"],
      "@/types/*": ["./web/types/*"],
      "@/utils/supabase/server": ["./web/utils/supabase/server"],
      "@/lib/supabase/server": ["./web/utils/supabase/server"],
      "@/components/polls/*": ["./web/features/polls/*"],
      "@/components/voting/*": ["./web/features/voting/*"],
      "@/components/CreatePoll*": ["./web/features/polls/components/CreatePollForm"],
      "@/components/admin/layout/*": ["./web/app/(app)/admin/layout/*"]
    },
    "types": ["node", "@testing-library/jest-dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    /* Stricter TypeScript settings for better type safety */
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "useUnknownInCatchVariables": true,
    /* Decorator support for @simplewebauthn/server */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "test-results",
    "playwright-report"
  ]
}
