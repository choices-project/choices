{
  "buildCommand": "cd web && npm run build",
  "installCommand": "cd web && npm install",
  "framework": "nextjs",
  "outputDirectory": "web/.next",
  "functions": {
    "web/app/**/*.ts": {
      "runtime": "nodejs22.x"
    },
    "web/app/**/*.tsx": {
      "runtime": "nodejs22.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/candidate-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/hashtag-trending-notifications",
      "schedule": "0 18 * * *"
    }
  ]
}
