{
  "name": "choices-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "web"
  ],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "npm run -ws build",
    "dev": "npm run --workspace web dev",
    "lint": "npm run -ws lint",
    "typecheck": "npm run -ws typecheck",
    "civics:dev": "npm run --workspace apps/ingest dev",
    "install": "cd web && npm install",
    "start": "cd web && npm run start",
    "next": "cd web && npm run dev",
    "next:build": "cd web && npm run build",
    "next:start": "cd web && npm run start",
    "vercel-build": "cd web && npm install && npm run build",
    "postinstall": "cd web && npm install",
    "build:web": "cd web && npm install && npm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.2.31",
    "next-pwa": "^5.6.0",
    "postcss": "^8.5.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.4.17",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.2.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.0",
    "@types/speakeasy": "^2.0.10",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.5",
    "typescript": "^5.9.2"
  }
}
