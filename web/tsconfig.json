{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["node", "@testing-library/jest-dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@choices/civics-shared": ["../services/civics-shared"],
      "@choices/civics-shared/*": ["../services/civics-shared/*"],
      "swr": ["./shims/swr"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "**/*.disabled",
    "**/*.disabled.*",
    "**/scripts.disabled/**",
    "**/tests.disabled/**",
    "**/_archived/**",
    "**/_deprecated/**",
    "archive/**",
    "archive-*/**",
    "tests/archive/**"
  ]
}
