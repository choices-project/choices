{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Stricter TypeScript settings for better type safety */
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "useUnknownInCatchVariables": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/features/*": ["./features/*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/types/*": ["./types/*"],
      "@/utils/supabase/server": ["./utils/supabase/server"],
      "@/lib/supabase/server": ["./utils/supabase/server"],
      "@/components/polls/*": ["./features/polls/*"],
      "@/components/voting/*": ["./features/voting/*"],
      "@/components/CreatePoll*": ["./features/polls/components/CreatePollForm"],
      "@/components/admin/layout/*": ["./app/(app)/admin/layout/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/*.disabled",
    "**/*.disabled.*",
    "**/scripts.disabled/**",
    "**/tests.disabled/**",
    "archive/**",
    "archive-*/**"
  ]
}
