{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "scripts/**/*",
    "shared/**/*",
    "src/**/*",
    "tests/**/*",
    "types/**/*",
    "utils/**/*",
    "features/**/*",
    "tools/**/*"
  ],
  "exclude": ["node_modules", ".next", "dist", "build", "coverage", "playwright-report", "test-results"]
}
