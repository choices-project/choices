'use client'

import { useState, useEffect } from 'react'
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card'
import { Badge } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import { 
  Share2, 
  Vote, 
  Users, 
  TrendingUp, 
  Zap, 
  ExternalLink,
  Copy,
  Check
} from 'lucide-react'
import { 
  generatePollShareContent, 
  generateCivicsShareContent,
  copyToClipboard,
  type PollShareData,
  type CivicsShareData
} from '@/lib/social-sharing'

interface SocialPreviewCardProps {
  pollData?: PollShareData
  civicsData?: CivicsShareData
  className?: string
}

export default function SocialPreviewCard({ 
  pollData, 
  civicsData, 
  className = '' 
}: SocialPreviewCardProps) {
  const [copied, setCopied] = useState(false)
  const [shareData, setShareData] = useState<any>(null)

  useEffect(() => {
    if (pollData) {
      setShareData(generatePollShareContent(pollData))
    } else if (civicsData) {
      setShareData(generateCivicsShareContent(civicsData))
    }
  }, [pollData, civicsData])

  const handleCopyShareText = async () => {
    if (!shareData) return
    
    const shareText = `${shareData.title}\n\n${shareData.description}\n\n${shareData.hashtags?.join(' ')}\n\n${shareData.url}`
    const success = await copyToClipboard(shareText)
    if (success) {
      setCopied(true)
      setTimeout(() => setCopied(false), 3000)
    }
  }

  if (!shareData) return null

  return (
    <div className={`space-y-4 ${className}`}>
      {/* Social Media Preview */}
      <Card className="border-2 border-blue-200 bg-gradient-to-br from-blue-50 to-indigo-50">
        <CardHeader className="pb-3">
          <div className="flex items-center justify-between">
            <CardTitle className="text-lg flex items-center gap-2">
              <Share2 className="w-5 h-5 text-blue-600" />
