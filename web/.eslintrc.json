{
  "plugins": ["import", "@typescript-eslint"],
  "extends": ["plugin:@typescript-eslint/recommended", "next/core-web-vitals"],
  "rules": {
    "react/jsx-no-undef": ["error", { "allowGlobals": false }],
    "import/no-unresolved": "error",
    "import/named": "error",
    "@typescript-eslint/consistent-type-imports": ["error", { "prefer": "type-imports" }],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "AssignmentExpression[right.type='Identifier'][right.name='undefined']",
        "message": "Use conditional spread or delete, not `= undefined`."
      }
    ],
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./components",
            "from": "lucide-react",
            "message": "Import icons directly in components, never re-export from UI barrels."
          },
          {
            "target": "./app",
            "from": "./components/ui/client",
            "message": "Server components cannot import the client barrel."
          }
        ]
      }
    ]
  }
}
