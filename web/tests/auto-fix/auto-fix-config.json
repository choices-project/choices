{
  "name": "Auto-Fix Configuration",
  "version": "1.0.0",
  "description": "Configuration for automated error fixing pipeline",
  "created": "2025-01-27",
  "updated": "2025-01-27",
  "settings": {
    "maxIterations": 3,
    "timeout": 300000,
    "parallel": true,
    "verbose": true
  },
  "fixes": {
    "eslint": {
      "enabled": true,
      "autoFix": true,
      "rules": [
        "no-console",
        "no-unused-vars",
        "prefer-const",
        "@typescript-eslint/no-non-null-assertion"
      ]
    },
    "typescript": {
      "enabled": true,
      "strict": true,
      "fixes": [
        "database-field-mapping",
        "import-paths",
        "type-assertions"
      ]
    },
    "tests": {
      "enabled": true,
      "autoFix": true,
      "fixes": [
        "undefined-variables",
        "import-statements",
        "test-setup"
      ]
    }
  },
  "filePatterns": {
    "include": [
      "app/**/*.{ts,tsx}",
      "lib/**/*.{ts,tsx}",
      "components/**/*.{ts,tsx}",
      "features/**/*.{ts,tsx}",
      "utils/**/*.{ts,tsx}",
      "tests/**/*.{ts,tsx}"
    ],
    "exclude": [
      "node_modules/**",
      ".next/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "playwright-report/**",
      "test-results/**"
    ]
  },
  "verification": {
    "linting": true,
    "typescript": true,
    "tests": true,
    "e2e": false
  }
}
