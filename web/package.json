{
  "name": "choice-web",
  "private": true,
  "engines": {
    "node": "22.19.0",
    "npm": "10.9.3"
  },
  "packageManager": "npm@10.9.3",
  "volta": {
    "node": "22.19.0",
    "npm": "10.9.3"
  },
  "scripts": {
    "dev": "TZ=UTC next dev",
    "build": "TZ=UTC next build",
    "start": "next start",
    "lint:fix": "eslint . --fix",
    "lint:test": "eslint . --max-warnings=0",
    "lint": "eslint .",
    "lint:strict": "eslint . --max-warnings=0",
    "lint:typed": "eslint . --ext .ts,.tsx --max-warnings=100",
    "lint:gradual": "eslint . --max-warnings=100",
    "lint:fix:gradual": "eslint . --fix --max-warnings=100",
    "types:dev": "tsc -p ../tsconfig.json --noEmit",
    "types:ci": "tsc -p ../tsconfig.ci.json --noEmit",
    "types:tests": "tsc -p ../tsconfig.tests.json --noEmit",
    "type-check": "npm run types:dev",
    "type-check:server": "tsc --noEmit -p ../tsconfig.ci.json",
    "jest:ci": "jest --runInBand --ci",
    "test": "jest",
    "test:jest": "jest",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:e2e:optimized": "playwright test --config=playwright.config.optimized.ts",
    "test:e2e:performance": "playwright test --config=playwright.config.optimized.ts --grep='Performance'",
    "test:e2e:accessibility": "playwright test --config=playwright.config.optimized.ts --grep='Accessibility'",
    "test:e2e:core": "playwright test --config=playwright.config.optimized.ts --grep='Core'",
    "test:all": "npm run test:jest && npm run test:playwright",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest -w 1 --selectProjects client server --testPathPatterns=unit",
    "test:integration": "jest -w 1 --selectProjects client server --testPathPatterns=integration",
    "test:ci": "npm run build && jest -w 1 --selectProjects client server && playwright test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:staging": "playwright test --config=playwright.staging.config.ts",
    "test:e2e:production": "playwright test --config=playwright.production.config.ts",
    "test:performance": "playwright test --config=playwright.performance.config.ts",
    "test:performance:core-web-vitals": "playwright test --config=playwright.performance.config.ts --grep='Core Web Vitals'",
    "test:performance:loading": "playwright test --config=playwright.performance.config.ts --grep='Loading Performance'",
    "test:performance:lighthouse": "lighthouse-ci autorun",
    "test:performance:report": "playwright test --config=playwright.performance.config.ts --reporter=html",
    "test:security": "playwright test tests/security/",
    "test:security:auth": "playwright test tests/security/authentication-security.spec.ts",
    "test:security:api": "playwright test tests/security/api-security.spec.ts",
    "test:security:comprehensive": "playwright test tests/security/security-comprehensive.spec.ts",
    "test:security:report": "playwright test tests/security/ --reporter=html",
    "test:schema": "jest --testPathPattern=schema",
    "auto-fix": "node scripts/auto-fix-simple.js",
    "auto-fix:pipeline": "tsx tests/auto-fix/auto-fix-pipeline.ts",
    "auto-fix:test": "npm run auto-fix && npm run test:all",
    "test:fast": "node scripts/test-selection.js fast",
    "test:medium": "node scripts/test-selection.js medium",
    "test:comprehensive": "node scripts/test-selection.js comprehensive",
    "test:all": "node scripts/test-selection.js all",
    "test:performance": "node scripts/test-selection.js performance",
    "test:security": "node scripts/test-selection.js security",
    "test:accessibility": "node scripts/test-selection.js accessibility",
    "ci:pre-commit": "node scripts/ci-integration.js pre-commit",
    "ci:pr": "node scripts/ci-integration.js pr",
    "ci:main": "node scripts/ci-integration.js main",
    "ci:deploy": "node scripts/ci-integration.js deploy",
    "ci:report": "node scripts/ci-integration.js report",
    "type-check:ci": "tsc --noEmit --skipLibCheck || echo 'TypeScript warnings found (non-blocking)'",
    "type-check:strict": "tsc -p ../tsconfig.ci.json --noEmit",
    "types:strict": "tsc -p ../tsconfig.ci.json --noEmit --skipLibCheck",
    "types:file": "tsc --noEmit --skipLibCheck",
    "errors:classify": "node tools/error-classify.js",
    "codemod:optional-literals": "tsx tools/codemods/optional-literals.ts",
    "check": "npm-run-all -p types:ci lint:test jest:ci",
    "ci:verify": "npm run audit:high && npm run check:next-security",
    "lint:typed:changed": "eslint . --config .eslintrc.type-aware.cjs --ext .ts,.tsx --cache --max-warnings=0 --cache-location .eslintcache-typed --report-unused-disable-directives",
    "prepush": "npm run types:ci && npm run lint:test",
    "lint:strict:fix": "eslint -c .eslintrc.cjs . --fix",
    "lint:staged": "eslint --cache --max-warnings=0",
    "security-check": "grep -r \"select('\\*')\" . --include='*.ts' --include='*.tsx' --exclude-dir=node_modules --exclude-dir=.next || echo 'No security issues found'",
    "performance-check": "npm run lint -- --max-warnings=0 --rule 'no-unused-vars: error' || echo 'Performance warnings found (non-blocking)'",
    "ci:install": "npm ci --ignore-scripts --userconfig .npmrc.ci",
    "audit:high": "npm audit --audit-level=high",
    "check:next-security": "node scripts/check-next-sec.js",
    "test:security-headers": "node scripts/test-security-headers.js",
    "ci:verify:deploy": "npm run audit:high && npm run check:next-security && npm run lint && npm run types:ci",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "ANALYZE=true npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "bundle:report": "npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js"
  },
