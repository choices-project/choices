    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-react": "7.27.1",
    "@babel/preset-typescript": "7.27.1",
    "@jest/globals": "30.1.2",
    "@next/bundle-analyzer": "15.5.3",
