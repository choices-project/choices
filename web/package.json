{
  "name": "choice-web",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.19.0",
    "npm": "10.9.3"
  },
  "packageManager": "npm@10.9.3",
  "volta": {
    "node": "22.19.0",
    "npm": "10.9.3"
  },
  "scripts": {
    "dev": "TZ=UTC next dev",
    "build": "TZ=UTC next build",
    "start": "next start",
    "lint:fix": "gtimeout 300 eslint . --fix",
    "lint:test": "gtimeout 300 eslint . --max-warnings=0",
    "lint": "gtimeout 300 eslint .",
    "lint:strict": "gtimeout 300 eslint . --max-warnings=0",
    "lint:typed": "gtimeout 300 eslint . --ext .ts,.tsx --max-warnings=0",
    "types:dev": "gtimeout 180 tsc -p ../tsconfig.json --noEmit",
    "types:ci": "gtimeout 180 tsc -p ../tsconfig.ci.json --noEmit",
    "types:tests": "gtimeout 180 tsc -p ../tsconfig.tests.json --noEmit",
    "type-check": "npm run types:dev",
    "type-check:server": "gtimeout 180 tsc --noEmit -p ../tsconfig.ci.json",
    "jest:ci": "gtimeout 600 jest --runInBand --ci",
    "test": "gtimeout 300 jest",
    "test:watch": "gtimeout 300 jest --watch",
    "test:coverage": "gtimeout 600 jest --coverage",
    "test:unit": "gtimeout 300 jest -w 1 --selectProjects client server --testPathPatterns=unit",
    "test:integration": "gtimeout 300 jest -w 1 --selectProjects client server --testPathPatterns=integration",
    "test:ci": "gtimeout 900 npm run build && gtimeout 300 jest -w 1 --selectProjects client server && gtimeout 600 playwright test",
    "test:e2e": "gtimeout 600 playwright test --reporter=line",
    "test:e2e:ui": "gtimeout 600 playwright test --ui --reporter=line",
    "test:e2e:headed": "gtimeout 600 playwright test --headed --reporter=line",
    "test:e2e:debug": "gtimeout 600 playwright test --debug --reporter=line",
    "test:e2e:staging": "gtimeout 600 playwright test --config=playwright.staging.config.ts --reporter=line",
    "test:e2e:production": "gtimeout 600 playwright test --config=playwright.production.config.ts --reporter=line",
    "test:performance": "gtimeout 600 playwright test --config=playwright.monitoring.config.ts --grep=performance --reporter=line",
    "test:load": "gtimeout 600 playwright test --config=playwright.monitoring.config.ts --grep=load --reporter=line",
    "test:schema": "gtimeout 300 jest --testPathPattern=schema",
    "type-check:ci": "gtimeout 180 tsc --noEmit --skipLibCheck || echo 'TypeScript warnings found (non-blocking)'",
    "type-check:strict": "gtimeout 180 tsc -p ../tsconfig.ci.json --noEmit",
    "types:strict": "gtimeout 180 tsc -p ../tsconfig.ci.json --noEmit --skipLibCheck",
    "types:file": "gtimeout 180 tsc --noEmit --skipLibCheck",
    "types:generate": "cd .. && supabase gen types typescript --linked 2>&1 | grep -v 'Initialising login role' > web/utils/supabase/database.types.ts",
    "errors:classify": "node tools/error-classify.js",
    "codemod:optional-literals": "tsx tools/codemods/optional-literals.ts",
    "check": "gtimeout 900 npm-run-all -p types:ci lint:test jest:ci",
    "ci:verify": "gtimeout 600 npm run audit:high && gtimeout 300 npm run check:next-security",
    "lint:typed:changed": "gtimeout 300 eslint . --ext .ts,.tsx --cache --max-warnings=0 --cache-location .eslintcache-typed --report-unused-disable-directives",
    "prepush": "gtimeout 600 npm run types:ci && gtimeout 300 npm run lint:test",
    "lint:strict:fix": "gtimeout 300 eslint . --fix",
    "lint:staged": "gtimeout 300 eslint --cache --max-warnings=0",
    "security-check": "grep -r \"select('\\*')\" . --include='*.ts' --include='*.tsx' --exclude-dir=node_modules --exclude-dir=.next || echo 'No security issues found'",
    "performance-check": "npm run lint -- --max-warnings=0 --rule 'no-unused-vars: error' || echo 'Performance warnings found (non-blocking)'",
    "ci:install": "npm ci --ignore-scripts --userconfig .npmrc.ci",
    "audit:high": "npm audit --audit-level=high",
    "check:next-security": "node scripts/check-next-sec.js",
    "test:security-headers": "node scripts/test-security-headers.js",
    "monitor:processes": "bash scripts/monitor-processes.sh",
    "ci:verify:deploy": "npm run audit:high && npm run check:next-security && npm run lint && npm run types:ci",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "ANALYZE=true npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "bundle:report": "npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "1.4.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "1.1.8",
    "@radix-ui/react-radio-group": "1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-separator": "1.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-tabs": "1.1.13",
    "@radix-ui/react-tooltip": "1.2.8",
    "@simplewebauthn/browser": "13.2.2",
    "@simplewebauthn/server": "13.2.2",
    "@supabase/auth-ui-react": "0.4.7",
    "@supabase/auth-ui-shared": "0.1.8",
    "@supabase/ssr": "0.6.1",
    "@supabase/supabase-js": "2.55.0",
    "@tanstack/react-query": "5.90.6",
    "@types/redis": "4.0.10",
    "@upstash/ratelimit": "2.0.7",
    "@upstash/redis": "1.35.6",
    "base64url": "3.0.1",
    "bcryptjs": "3.0.3",
    "circomlib": "2.0.5",
    "circomlibjs": "0.1.7",
    "class-variance-authority": "0.7.1",
    "client-only": "0.0.1",
    "clsx": "2.1.1",
    "cmdk": "^1.1.1",
    "framer-motion": "12.23.24",
    "immer": "^10.1.1",
    "jsonwebtoken": "9.0.2",
    "lucide-react": "0.552.0",
    "next": "14.2.32",
    "pg": "8.16.3",
    "qrcode": "1.5.4",
    "react": "18.2.0",
    "react-dom": "19.2.0",
    "recharts": "3.3.0",
    "redis": "5.9.0",
    "resend": "^6.4.0",
    "server-only": "0.0.1",
    "snarkjs": "0.7.5",
    "speakeasy": "2.0.0",
    "tailwind-merge": "3.3.1",
    "uuid": "13.0.0",
    "web-push": "^3.6.7",
    "yaml": "2.8.1",
    "zod": "4.1.12",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@babel/preset-react": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@jest/globals": "30.1.2",
    "@next/bundle-analyzer": "15.5.3",
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/bcryptjs": "3.0.0",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/k6": "^1.3.1",
    "@types/node": "24.10.0",
    "@types/pg": "8.15.6",
    "@types/qrcode": "1.5.6",
    "@types/react": "18.3.17",
    "@types/react-dom": "19.2.2",
    "@types/speakeasy": "2.0.10",
    "@types/uuid": "11.0.0",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.18.2",
    "autoprefixer": "10.4.21",
    "babel-jest": "30.2.0",
    "dotenv": "17.2.3",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.32",
    "eslint-plugin-boundaries": "5.0.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "4.2.0",
    "ignore-loader": "^0.1.2",
    "jest": "30.1.2",
    "jest-environment-jsdom": "30.1.2",
    "postcss": "8.5.6",
    "semver": "7.7.3",
    "tailwindcss": "4.1.16",
    "ts-morph": "27.0.2",
    "tsx": "4.20.6",
    "typescript": "5.7.2"
  },
  "overrides": {
    "chalk": "4.1.2",
    "ansi-styles": "4.3.0",
    "supports-color": "7.2.0",
    "strip-ansi": "6.0.1",
    "debug": "4.4.1",
    "color-convert": "2.0.1",
    "color-string": "1.9.1"
  }
}
