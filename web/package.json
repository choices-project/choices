{
  "name": "choice-web",
  "private": true,
  "engines": {
    "node": "22.19.0",
    "npm": "10.9.3"
  },
  "packageManager": "npm@10.9.3",
  "volta": {
    "node": "22.19.0",
    "npm": "10.9.3"
  },
  "scripts": {
    "dev": "TZ=UTC next dev",
    "build": "TZ=UTC next build",
    "start": "next start",
    "lint:fix": "eslint . --fix",
    "lint:test": "eslint . --max-warnings=0",
    "lint": "eslint .",
    "lint:strict": "eslint . --max-warnings=0",
    "lint:typed": "eslint . --ext .ts,.tsx --max-warnings=100",
    "lint:gradual": "eslint . --max-warnings=100",
    "lint:fix:gradual": "eslint . --fix --max-warnings=100",
    "types:dev": "tsc -p ../tsconfig.json --noEmit",
    "types:ci": "tsc -p ../tsconfig.ci.json --noEmit",
    "types:tests": "tsc -p ../tsconfig.tests.json --noEmit",
    "type-check": "npm run types:dev",
    "type-check:server": "tsc --noEmit -p ../tsconfig.ci.json",
    "test": "jest",
    "test:jest": "jest",
    "test:jest:background": "node scripts/jest-background.js",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:jest:ci": "jest --runInBand --ci",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --collect.url=http://localhost:3002",
    "lighthouse:report": "lhci autorun --upload.target=temporary-public-storage",
    "test:playwright": "playwright test --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:playwright:ui": "playwright test --ui --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:playwright:monitoring": "playwright test --config=tests/playwright/configs/playwright.config.monitoring.ts",
    "test:playwright:performance": "playwright test --config=tests/playwright/configs/playwright.config.performance.ts",
    "test:playwright:inline": "playwright test --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:core": "playwright test tests/playwright/e2e/core/ --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:features": "playwright test tests/playwright/e2e/features/ --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:performance": "playwright test tests/playwright/e2e/performance/ --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:security": "playwright test tests/playwright/e2e/security/ --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:compatibility": "playwright test tests/playwright/e2e/compatibility/ --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:monitoring": "playwright test tests/playwright/e2e/monitoring/ --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:full": "playwright test --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:ui": "playwright test --ui --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:report": "playwright show-report",
    "test:monitoring:report": "open tests/playwright/monitoring-dashboard.html",
    "test:monitor": "node scripts/test-monitoring.js",
    "test:monitor:core": "node scripts/test-monitoring.js core",
    "test:monitor:features": "node scripts/test-monitoring.js features",
    "test:monitor:performance": "node scripts/test-monitoring.js performance",
    "test:monitor:all": "node scripts/test-monitoring.js core features performance security",
    "test:inline": "node scripts/test-inline.js",
    "test:inline:core": "node scripts/test-inline.js core",
    "test:inline:features": "node scripts/test-inline.js features",
    "test:inline:performance": "node scripts/test-inline.js performance",
    "test:background": "node scripts/test-background-comprehensive.js parallel",
    "test:background:jest": "node scripts/test-background-comprehensive.js jest",
    "test:background:playwright": "node scripts/test-background-comprehensive.js playwright",
    "test:background:watch": "node scripts/test-background-comprehensive.js parallel --watch",
    "test:background:stop": "node scripts/test-background-comprehensive.js --stop",
    "test:background:status": "node scripts/test-background-comprehensive.js --status",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:feeds": "jest --testPathPattern=features/feeds",
    "test:ci": "npm run build && jest --ci && playwright test --config=tests/playwright/configs/playwright.config.inline.ts",
    "test:all": "npm run test:jest && npm run test:playwright",
    "performance:test": "playwright test --config=tests/playwright/configs/playwright.config.performance.ts",
    "performance:lighthouse": "npm run lighthouse:ci",
    "performance:full": "npm run performance:test && npm run performance:lighthouse",
    "auto-fix": "node scripts/auto-fix-simple.js",
    "auto-fix:pipeline": "tsx tests/auto-fix/auto-fix-pipeline.ts",
    "auto-fix:test": "npm run auto-fix && npm run test:all",
    "ci:pre-commit": "node scripts/ci-integration.js pre-commit",
    "ci:pr": "node scripts/ci-integration.js pr",
    "ci:main": "node scripts/ci-integration.js main",
    "ci:deploy": "node scripts/ci-integration.js deploy",
    "ci:report": "node scripts/ci-integration.js report",
    "type-check:ci": "tsc --noEmit --skipLibCheck || echo 'TypeScript warnings found (non-blocking)'",
    "type-check:strict": "tsc -p ../tsconfig.ci.json --noEmit",
    "types:strict": "tsc -p ../tsconfig.ci.json --noEmit --skipLibCheck",
    "types:file": "tsc --noEmit --skipLibCheck",
    "errors:classify": "node tools/error-classify.js",
    "codemod:optional-literals": "tsx tools/codemods/optional-literals.ts",
    "check": "npm-run-all -p types:ci lint:test jest:ci",
    "ci:verify": "npm run audit:high && npm run check:next-security",
    "lint:typed:changed": "eslint . --config .eslintrc.type-aware.cjs --ext .ts,.tsx --cache --max-warnings=0 --cache-location .eslintcache-typed --report-unused-disable-directives",
    "prepush": "npm run types:ci && npm run lint:test",
    "lint:strict:fix": "eslint -c .eslintrc.cjs . --fix",
    "lint:staged": "eslint --cache --max-warnings=0",
    "security-check": "grep -r \"select('\\*')\" . --include='*.ts' --include='*.tsx' --exclude-dir=node_modules --exclude-dir=.next || echo 'No security issues found'",
    "performance-check": "npm run lint -- --max-warnings=0 --rule 'no-unused-vars: error' || echo 'Performance warnings found (non-blocking)'",
    "ci:install": "npm ci --ignore-scripts --userconfig .npmrc.ci",
    "audit:high": "npm audit --audit-level=high",
    "check:next-security": "node scripts/check-next-sec.js",
    "test:security-headers": "node scripts/test-security-headers.js",
    "ci:verify:deploy": "npm run audit:high && npm run check:next-security && npm run lint && npm run types:ci",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "ANALYZE=true npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "bundle:report": "npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js"
  },
