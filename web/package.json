    "pg": "8.16.3",
    "qrcode": "1.5.4",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "3.2.1",
    "redis": "5.8.3",
    "server-only": "0.0.1",
    "snarkjs": "0.7.5",
