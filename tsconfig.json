{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "web/**/*",
    "scripts/**/*",
    "docs/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "tests/**",
    "**/*.disabled",
    "**/*.disabled.*",
    "**/scripts.disabled/**",
    "**/tests.disabled/**"
  ]
}
