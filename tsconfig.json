{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["web/*"],
      "@choices/civics-shared": ["services/civics-shared/index"],
      "@choices/civics-shared/*": ["services/civics-shared/*"]
    }
  },
  "include": [
    "web/**/*",
    "scripts/**/*",
    "docs/**/*",
    "services/civics-shared/**/*.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "tests/**",
    "web/tests/archive/**",
    "**/*.disabled",
    "**/*.disabled.*",
    "**/scripts.disabled/**",
    "**/tests.disabled/**"
  ]
}
