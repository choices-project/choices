{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["jest", "node"],
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["web/*"],
      "@/tests/*": ["web/tests/*"]
    }
  },
  "include": [
    "tests/**/*",
    "web/tests/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "web/tests/archive/**/*",
    "**/_archived/**",
    "web/tests/e2e/specs/_archived"
  ]
}
