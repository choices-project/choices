{
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": [
              "@/components/polls/*"
            ],
            "message": "Use '@/features/polls/*' (canonical)."
          },
          {
            "group": [
              "@/components/voting/*"
            ],
            "message": "Use '@/features/voting/*' (canonical)."
          },
          {
            "group": [
              "@/components/CreatePoll*"
            ],
            "message": "Use '@/features/polls/components/CreatePollForm' (canonical)."
          },
          {
            "group": [
              "@/components/Dashboard*",
              "@/components/EnhancedDashboard*"
            ],
            "message": "Use '@/components/AnalyticsDashboard' (canonical)."
          },
          {
            "group": [
              "@/components/auth/AuthProvider*",
              "@/hooks/AuthProvider*",
              "@/hooks/useSupabaseAuth*"
            ],
            "message": "Use '@/contexts/AuthContext' or server middleware (canonical)."
          },
          {
            "group": [
              "@/lib/supabase/server",
              "@/shared/core/database/lib/server",
              "@/shared/lib/server",
              "@/shared/core/database/lib/supabase-server",
              "@/lib/supabase-ssr-safe"
            ],
            "message": "Use '@/utils/supabase/server' (canonical)."
          },
          {
            "group": [
              "@/utils/supabase/client-dynamic",
              "@/utils/supabase/client-minimal",
              "@/shared/core/database/lib/client"
            ],
            "message": "Use '@/utils/supabase/client' (canonical)."
          },
          {
            "group": [
              "@/features/webauthn/lib/webauthn",
              "@/lib/shared/webauthn",
              "@/src/components/WebAuthnAuth"
            ],
            "message": "Use '@/lib/webauthn/*' (canonical)."
          },
          {
            "group": [
              "@/features/civics/sources/propublica"
            ],
            "message": "Use '@/features/civics/ingest/connectors/propublica' (canonical)."
          },
          {
            "group": [
              "@/shared/components/*"
            ],
            "message": "Use '@/components/ui/*' (canonical barrels)."
          }
        ]
      }
    ]
  }
}