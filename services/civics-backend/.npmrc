# NPM Configuration for Civics Backend Service
# Ensures consistent package installation and security

# Use exact versions for production stability
save-exact=true

# Enable audit for security
audit=true

# Use package-lock.json for deterministic installs
package-lock=true

# Set registry (use official npm registry)
registry=https://registry.npmjs.org/

# Enable strict peer dependencies
strict-peer-deps=true

# Disable optional dependencies in production
optional=false

# Set cache directory
cache=/tmp/.npm

# Enable progress bar
progress=true

# Set log level
loglevel=warn


