{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2023"],
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@choices/civics-shared": ["../civics-shared/index"],
      "@choices/civics-shared/*": ["../civics-shared/*"]
    }
  },
  "include": ["src/**/*.ts"]
}

